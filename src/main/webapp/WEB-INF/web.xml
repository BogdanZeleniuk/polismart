<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">

    <display-name>Polismart online insurance calculator</display-name>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.insurance.polismart.web.UserServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>insuranceServlet</servlet-name>
        <servlet-class>com.insurance.polismart.web.InsuranceCompanyServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>insuranceServlet</servlet-name>
        <url-pattern>/insurance</url-pattern>
    </servlet-mapping>



</web-app>